{% extends 'base_accueil.html.twig' %}

{% block body %}
<div id="container">

	<div class="row">

    <div class="enregistrement_formulaire">
      <!--Formulaire-->
      <form class="formulaire1 col-lg-offset-1 col-lg-4 col-lg-offset-1 col-md-offset-1 col-md-4 col-md-offset-1 col-sm-10 col-xs-10">
        <h3>Formulaire d'enregistrement</h3>
        <div class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_username" placeholder="Nom d'utilisateur">
        </div>
        <div class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_mdp1" placeholder="Mot de passe">
        </div>
        <div class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_mdp2" placeholder="Ressaisissez votre mot de passe">
        </div>
        <div class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_nom" placeholder="Nom">
        </div>
        <div class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_prenom" placeholder="PrÃ©nom">
        </div>
        <fieldset class="form-group">
          <input type="text" class="form-control obligatoire" id="Input_naissance" placeholder="Date de naissance">
        </fieldset>
        <fieldset class="form-group">
          <textarea class="form-control" id="Input_adresse"  rows="3" placeholder="Adresse postale"></textarea>
        </fieldset>
        <div class="form-group">
          <input type="email" class="form-control obligatoire" id="Input_email" placeholder="Email">
        </div>
       </form>
       <form class="formulaire2 col-lg-offset-1 col-lg-4 col-lg-offset-1 col-md-offset-1 col-md-4 col-md-offset-1 col-sm-10 col-xs-10">
        <fieldset class="form-group">
          <input type="text" class="form-control" id="Input_github" placeholder="Lien github">
        </fieldset>
        <fieldset class="form-group">
          <input type="text" class="form-control" id="Input_linkedin" placeholder="Lien linkedin">
        </fieldset>
        <fieldset class="form-group">
          <input type="text" class="form-control" id="Input_twitter" placeholder="Lien twitter">
        </fieldset>
        <fieldset class="form-group">
          <input type="text" class="form-control" id="Input_doyoubuzz" placeholder="Lien doyoubuzz">
        </fieldset>
        <fieldset class="form-group">
          <textarea class="form-control" id="Input_biographie" rows="8" placeholder="Biographie"></textarea>
        </fieldset>
        <button type="submit" class="btn btn-primary pull-right">S'enregistrer</button>
      </form>
    </div>

	</div>

</div>
{% endblock %}
