{% extends 'base.html.twig' %}

{% block body %}

{% trans_default_domain 'FOSUserBundle' %}

<div class="register-div">
  {{ form_start(form, {'method': 'post', 'action': path('user_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}

    <div class="col-md-12 ">
      <div class="col-md-2">
          Nom d'utilisateur :
      </div>
      <div class="col-md-6">
        {{ form_widget(form.username) }}
        {{ form_errors(form.username) }}
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          nom :
        </div>
      <div class="col-md-6">
        <input type="text" name="nom">
        </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          prenom :
        </div>
      <div class="col-md-6">
        <input type="text" name="prenom">
        </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          Adresse E-mail :
      </div>
      <div class="col-md-6">
        {{ form_widget(form.email) }}
        {{ form_errors(form.email) }}
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          Date de naissance :
        </div>
      <div class="col-md-6">
        <input type="text" name="naissance">
        </div>
    </div>


    <div class="col-md-12 register-form">
      <div class="col-md-2">
          adresse :
      </div>
      <div class="col-md-6">
        <textarea class="form-control" id="Input_adresse"  rows="3" placeholder="Adresse postale" name="adresse"></textarea>
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          Mot de passe :
        </div>
      <div class="col-md-6">
        {{ form_widget(form.plainPassword.first) }}
        {{ form_errors(form.plainPassword.first) }}
        </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          Confirmation :
        </div>
      <div class="col-md-6">
        {{ form_widget(form.plainPassword.second) }}
        {{ form_errors(form.plainPassword.second) }}
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          github :
        </div>
      <div class="col-md-6">
        <input type="text" name="github">
        </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          linkedin :
        </div>
      <div class="col-md-6">
        <input type="text" name="linkedin">
        </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          twitter :
      </div>
      <div class="col-md-6">
        <input type="text" name="twitter">
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          doyoubuzz :
      </div>
      <div class="col-md-6">
        <input type="text" name="doyoubuzz">
      </div>
    </div>

    <div class="col-md-12 register-form">
      <div class="col-md-2">
          Biographie :
      </div>
      <div class="col-md-6">
        <textarea class="form-control" rows="3" name="biographie"></textarea>
      </div>
    </div>
    <div class="col-md-12 register-but">
        <input class="btn btn-success" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
  
  {{ form_end(form) }}

</div>

{% endblock %}